<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <TextView
        android:id="@+id/data_list_detail"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:maxLines="1"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"
        android:textColor="#000000"
        android:textSize="12sp"
        tools:text="Detail" />

    <ImageView
        android:id="@+id/data_list_thumbnail"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/data_list_detail"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:contentDescription="image1"
        android:scaleType="centerInside"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/data_list_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/data_list_detail"
        android:layout_toRightOf="@+id/data_list_text_layout"
        android:text="StartDate" />


    -

    <TextView
        android:id="@+id/data_list_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/data_list_text_layout"
        android:layout_below="@+id/data_list_start"
        android:layout_toEndOf="@+id/data_list_text_layout"
        android:layout_toRightOf="@+id/data_list_text_layout"
        android:text="EndDate"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/data_list_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/data_list_thumbnail"
        android:layout_alignTop="@+id/data_list_thumbnail"
        android:layout_toEndOf="@id/data_list_thumbnail"
        android:layout_toLeftOf="@id/data_list_detail"
        android:layout_toRightOf="@id/data_list_thumbnail"
        android:layout_toStartOf="@id/data_list_detail">

        <TextView
            android:id="@+id/data_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"

            android:layout_marginRight="8dp"
            android:textSize="16sp"
            tools:text="Title" />

        <TextView
            android:id="@+id/data_list_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/data_list_title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="14sp"
            tools:text="Subtitle" />

    </RelativeLayout>


</RelativeLayout>
